<Window
    x:Class="test_subModelSelectedItem.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Program;assembly=test_subModelSelectedItem.Core"
    Title="SubModelSelectedItem+StaticBindings"
    Width="600"
    d:DataContext="{d:DesignInstance Type=vm:Form_VM,
                                     IsDesignTimeCreatable=True}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,15,0,0">

        <GroupBox
            Width="380"
            Header="Add">
            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5,5"
                    Command="{Binding AddTextBoxA}">
                    A
                </Button>
                <Button
                    Width="100"
                    Margin="5,5"
                    Command="{Binding AddTextBoxB}">
                    B
                </Button>
                <Button
                    Width="100"
                    Margin="5,5"
                    Command="{Binding AddTextBoxC}">
                    C
                </Button>
            </StackPanel>
        </GroupBox>

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5,5"
                Command="{Binding SelectRandom}">
                Select random
            </Button>
            <Button
                Width="100"
                Margin="5,5"
                Command="{Binding Deselect}">
                Deselect
            </Button>
        </StackPanel>

        <ListView
            Margin="5"
            HorizontalContentAlignment="Center"
            BorderBrush="DarkGreen"
            BorderThickness="2"
            ItemsSource="{Binding Components}"
            SelectedItem="{Binding SelectedEntity}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text="{Binding Name}" />
                        <TextBlock
                            Text="{Binding SelectedLabel}" />

                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>

        <TextBlock
            Width="280"
            Margin="10"
            Padding="5"
            Background="AntiqueWhite"
            FontWeight="SemiBold"
            Text="{Binding SelectedEntityLog}"
            TextAlignment="Center" />

    </StackPanel>
</Window>